{
  "compilerOptions": {
    "types": [
        "node",
        "jest"
      ],
    "incremental": true,
    "target": "es2019",
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "composite": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": true
  },
  "exclude": ["node_modules"]
}
